{
	"manifest_version": 2,

	"name": "Group Tabs",
	"description": "Chrome extension inspired by Firefox tab group extension",
	"version": "0.1.1",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
	"default_title": "Group Tabs"
	},
	"background": {
		"scripts": ["tab_group.js", "background.js"]
	},
	"commands": {
		"previous-group": {
			"suggested_key": {
				"default": "Ctrl+Shift+Z"
			},
			"description": "previous-group"
		},
		"next-group": {
			"suggested_key": {
				"default": "Ctrl+Shift+X"
			},
			"description": "next-group"
		}
	},
	"permissions": [
		"activeTab","tabs", "storage"
	]


}
